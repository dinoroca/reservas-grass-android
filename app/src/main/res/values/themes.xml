<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Reciclyng" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores base -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/fonts</item>
        <item name="fontFamily">@font/fonts</item>

        <!-- Colores de texto -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/darkGray</item>

        <!-- Estilo de botón personalizado -->
        <item name="materialButtonStyle">@style/Widget.Reciclyng.Button</item>

        <!-- Estilo de input de texto personalizado -->
        <item name="textInputStyle">@style/Widget.Reciclyng.TextInputLayout</item>
    </style>

    <!-- Estilo de botón -->
    <style name="Widget.Reciclyng.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!-- Estilo de input de texto -->
    <style name="Widget.Reciclyng.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="input_black" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="VerificationCodeEditText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:background">@drawable/bg_verification_code</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>